# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/authx_enterprise?schema=public"

# JWT Configuration (Change these in production!)
JWT_ACCESS_SECRET=authx-dev-access-secret-change-in-production-32chars
JWT_REFRESH_SECRET=authx-dev-refresh-secret-change-in-production-32chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Cookie Configuration
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Email (for PTP notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@authx.com

# Logging
LOG_LEVEL=debug

# Features
ENABLE_GPS_VALIDATION=true
GPS_THRESHOLD_METERS=300
ENABLE_DEVICE_FINGERPRINTING=true
ENABLE_PTP_MONITORING=true
